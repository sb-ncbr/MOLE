<UserControl x:Class="WebChemistry.Tunnels.WPF.Controls.ParameterSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="root">
        <TextBox Background="#FF525252" x:Name="value" MaxLength="5" Grid.Column="1" VerticalAlignment="Center" TextChanged="value_TextChanged" />
        <Slider Margin="40, 0, 5, 0" x:Name="slider" Grid.Column="2" Value="{Binding Value, Mode=TwoWay}" Minimum="{Binding MinValue, Mode=OneWay}" Maximum="{Binding MaxValue, Mode=OneWay}" VerticalAlignment="Center" ValueChanged="slider_ValueChanged" />
    </Grid>
</UserControl>
